<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Call To Action Form</masterLabel>
    <description>atractive form to send a mesage (call-to-action)</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                type="String"
                name="smallText"
                label="Small Text"
                default="Send me a message. Let's connect!"
                description="A small text located below the Title"
            />
            <property
                type="String"
                name="buttonLabel"
                label="Button Label"
                default="Send Message"
            />
            <property
                type="String"
                name="redirectTo"
                label="Page API Name"
                default="thank-you"
                description="Page API Name to redirect after the form completion"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>