<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property 
                type="String"
                name="title"
                label="Title (In Brand 2 Color)"
                default="I'm Oxana,"
            />
            <property 
                type="String"
                name="titleSecond"
                label="Title 2 (In Brand 1 Color)"
                default="Salesforce Developer"
            />
            <property 
                type="String"
                name="funText"
                label="Fun Text"
                default="Hello!"
            />
            <property
                type="String"
                name="smallText"
                label="Small Text"
                default="Certified Salesforce Engineer with a real experience."
                description="A small text located below the Title"
            />
            <property 
                type="Boolean"
                name="showButton1"
                label="Show Button 1"
                default="true"
            />
            <property 
                type="String"
                name="button1text"
                label="Button 1 text"
                default="View My Portfolio"
            />
            <property 
                type="Boolean"
                name="showButton2"
                label="Show Button 2"
                default="true"
                description="An anchor to a component on the same page."
            />
            <property 
                type="String"
                name="button2text"
                label="Button 2 text"
                default="Hire Me"
            />
            <property 
                type="String"
                name="componentName"
                label="Component to scroll (Button 2)"
                default="call-to-action"
                description="A component name written in kebab-case."
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>